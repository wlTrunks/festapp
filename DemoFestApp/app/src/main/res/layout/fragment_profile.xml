<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar"
                android:id="@+id/profile_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_login"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_login"
                    android:hint="@string/login_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_status"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_status"
                    android:hint="@string/profile_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_surname"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_surname"
                    android:hint="@string/profile_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_name"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_name"
                    android:hint="@string/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_email"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_email"
                    android:hint="E-mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_phone"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_phone"
                    android:hint="+79998887766"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wrap_profile_about_me"
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_about_me"
                    android:minLines="4"
                    android:hint="About me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:clickable="true"
                android:gravity="center"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                android:id="@+id/profile_my_events"
                android:text="My events"
                android:theme="@style/PrimaryFlatButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
